{
  "name": "neo4j-mcp-server",
  "version": "1.0.0",
  "description": "Production-ready Neo4j MCP server with multi-tenancy and Azure AKS deployment",
  "main": "dist/index.js",
  "bin": {
    "neo4j-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "prepare": "npm run build",
    "deploy:azure": "./scripts/deploy-azure.sh",
    "setup:ssl": "./scripts/setup-ssl.sh",
    "health-check": "./scripts/health-check.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/miltonvve/neo4j-mcp-server.git"
  },
  "keywords": [
    "neo4j",
    "mcp",
    "model-context-protocol",
    "graph-database",
    "multi-tenant",
    "azure",
    "kubernetes",
    "claude",
    "ai",
    "typescript"
  ],
  "author": {
    "name": "GenAI Guru",
    "email": "miltonvve@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/miltonvve/neo4j-mcp-server/issues"
  },
  "homepage": "https://github.com/miltonvve/neo4j-mcp-server#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "neo4j-driver": "^5.23.0",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.0.0",
    "typescript": "^5.0.0",
    "ts-node": "^10.9.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "prettier": "^3.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0"
  },
  "peerDependencies": {
    "neo4j-driver": "^5.0.0"
  },
  "files": [
    "dist",
    "kubernetes",
    "scripts",
    "docs",
    "examples",
    "README.md",
    "LICENSE"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}